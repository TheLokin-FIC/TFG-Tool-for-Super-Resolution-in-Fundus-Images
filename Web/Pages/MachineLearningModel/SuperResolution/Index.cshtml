@page
@model Web.Pages.MachineLearningModel.SuperResolution.IndexModel
@{
    ViewData["Title"] = "Super Resolution";
}

<div class="try-it">
    <div class="result-area">
        @if (Model.ImageBytes != null)
        {
            <img src="@string.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(Model.ImageBytes))" />
        }
        else
        {
            <i class="fa fa-file-image-o"></i>
        }
        <svg class="spinner" width="65px" height="65px" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
            <circle class="path-background" fill="none" stroke-width="6" stroke-linecap="round" cx="33" cy="33" r="30"></circle>
            <circle class="path-foreground" fill="none" stroke-width="6" stroke-linecap="round" cx="33" cy="33" r="30"></circle>
        </svg>
    </div>
</div>

<div class="info">
    <h1>@ViewData["Title"]</h1>
    <p class="description">With super resolution powered by deep learning, you can increase the resolution of your images without losing rich features.</p>
    <form method="post" asp-page="/MachineLearning/SuperResolution/Index" enctype="multipart/form-data">
        <div class="form-group">
            <div class="form-check form-check-inline">
                <label class="form-check-label">Upscale factor</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="upscaleFactor" value="2x" id="upscale2x" checked />
                <label class="form-check-label" for="upscale2x">2x</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="upscaleFactor" value="4x" id="upscale4x" />
                <label class="form-check-label" for="upscale4x">4x</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="upscaleFactor" value="8x" id="upscale8x" />
                <label class="form-check-label" for="upscale8x">8x</label>
            </div>
        </div>
        <div class="form-group">
            <input class="input-file form-control-file" type="file" name="file" accept="image/*" id="file">
            <label class="btn btn-file btn-block" for="file">
                <i class="icon-file fa"></i>
                <span class="js-filename">Choose an image</span>
            </label>
        </div>
        <button class="btn btn-primary btn-block" type="submit" value="Upload">Upload</button>
    </form>
</div>