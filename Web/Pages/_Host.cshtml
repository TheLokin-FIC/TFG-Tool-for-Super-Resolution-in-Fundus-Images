@page "/"

@namespace Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, BundlerMinifier.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <base href="~/" />

    <link rel="shortcut icon" type="image/x-icon" href="~/icon.ico" />
    <link rel="icon" type="image/x-icon" href="~/icon.ico" />

    <link rel="stylesheet" type="text/css" href="_content/Blazorise/blazorise.css" />
    <link rel="stylesheet" type="text/css" href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" />

    <environment names="Development">
        <bundle name="wwwroot/bundles/site.min.css" />
    </environment>
    <environment names="Staging,Production">
        <bundle name="wwwroot/bundles/site.min.css" />
    </environment>
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <script type="text/javascript" src="_content/Blazorise/blazorise.js"></script>
    <script type="text/javascript" src="_content/Blazorise.Charts/blazorise.charts.js"></script>
    <script type="text/javascript" src="_content/Blazorise.Bootstrap/blazorise.bootstrap.js"></script>

    <script type="text/javascript" src="_framework/blazor.server.js"></script>

    <environment names="Development">
        <bundle name="wwwroot/bundles/site.min.js" />
    </environment>
    <environment names="Staging,Production">
        <bundle name="wwwroot/bundles/site.min.js" />
    </environment>
</body>
</html>